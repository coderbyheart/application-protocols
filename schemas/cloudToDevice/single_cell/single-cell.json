{
    "title":"Single Cell Response",
    "description":"Responds with coordinates",
    "type":"object",
    "properties":{
       "appId":{
          "type":"string",
          "const":"SCELL"
       },
       "messageType":{
          "type":"string",
          "const":"DATA"
       },
       "data":{
          "type":"object",
          "properties":{
             "lat":{
                "$ref": "#/definitions/Lat"
             },
             "lon":{
               "$ref": "#/definitions/Lon"
             },
             "uncertainty":{
               "$ref": "#/definitions/Uncertainty"
             }
          },
          "additionalProperties":false
       }
    },
    "additionalProperties":false,
    "required":[
       "appId",
       "messageType",
       "data"
    ],
    "definitions": {
      "Lat":{
         "type":"number",
         "description":"GPS latitude",
         "minimum": -90,
         "maximum": 90
      },
      "Lon":{
         "type":"number",
         "description":"GPS longitude",
         "minimum": -180,
         "maximum": 180
      },
      "Uncertainty":{
         "type":"integer",
         "description":"HPE (horizontal positioning error) in meters"
      }
    }
 }
