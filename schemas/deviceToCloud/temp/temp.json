{
    "title":"Temperature",
    "description":"The device's temperature sensor reading in Celsius",
    "type":"object",
    "properties":{
       "appId":{
          "type":"string",
          "const":"TEMP"
       },
       "messageType":{
          "type":"string",
          "enum":[
              "DATA",
              "HELLO"
          ]
       },
       "data":{
          "type":"string",
          "pattern":"^-?([0-9]|[1-9][0-9]+)\\.[0-9]+$"
       },
       "ts": {
           "type": "number",
           "description": "Unix timestamp given in milliseconds when the data was sampled"
       }
    },
    "additionalProperties":false,
    "required":[
       "appId",
       "messageType"
    ]
 }
